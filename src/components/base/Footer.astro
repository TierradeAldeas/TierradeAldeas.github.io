---
interface Props {
  links: {
    facebook?: string;
    github?: string;
    instagram?: string;
    linkedIn?: string;
    youtube?: string;
  };
}

const { links } = Astro.props;
---

<div class="flex items-center justify-center">
  {links.facebook && (
    <a href={links.facebook} target="_blank" rel="noopener noreferrer" class="mx-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75h-2.25a1.5 1.5 0 0 0-1.5 1.5v2.25H17.25l-.375 3h-2.625V21h-3v-7.5H8.25v-3h2.25V8.25a4.5 4.5 0 0 1 4.5-4.5h2.25v3z" />
      </svg>
    </a>
  )}

  {links.github && (
    <a href={links.github} target="_blank" rel="noopener noreferrer" class="mx-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75a9.75 9.75 0 0 0 6.75 9.293v-3.543c0-.69-.28-1.356-.772-1.848a2.625 2.625 0 0 1 .227-3.948c-.203-.466-.227-1.018-.05-1.5a7.5 7.5 0 0 1 4.5-3.75c.518-.108 1.057-.16 1.6-.154a7.5 7.5 0 0 1 3.75 1.009 7.5 7.5 0 0 1 2.25 2.25 7.5 7.5 0 0 1 1.009 3.75c.005.543-.046 1.082-.154 1.6a7.5 7.5 0 0 1-3.75 4.5c-.482.177-1.034.153-1.5-.05a2.625 2.625 0 0 1-3.948-.227c-.492-.492-1.158-.772-1.848-.772H9.75v3.543A9.75 9.75 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75z" />
      </svg>
    </a>
  )}

  {links.instagram && (
    <a href={links.instagram} target="_blank" rel="noopener noreferrer" class="mx-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 2.25h-7.5A6 6 0 0 0 2.25 8.25v7.5a6 6 0 0 0 6 6h7.5a6 6 0 0 0 6-6v-7.5a6 6 0 0 0-6-6zM12 15.75a3.75 3.75 0 1 1 0-7.5 3.75 3.75 0 0 1 0 7.5zm4.875-8.625h.008v.008h-.008v-.008z" />
      </svg>
    </a>
  )}

  {links.linkedIn && (
    <a href={links.linkedIn} target="_blank" rel="noopener noreferrer" class="mx-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 8.25a4.5 4.5 0 0 1 4.5 4.5v6.75h-3.75V12.75a.75.75 0 0 0-1.5 0v6.75H12V12a4.5 4.5 0 0 1 4.5-3.75zM6.75 9h-3V21h3V9zm-1.5-3.75a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
      </svg>
    </a>
  )}

  {links.youtube && (
    <a href={links.youtube} target="_blank" rel="noopener noreferrer" class="mx-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75c0-.621.504-1.125 1.125-1.125h14.25c.621 0 1.125.504 1.125 1.125v10.5c0 .621-.504 1.125-1.125 1.125H4.875a1.125 1.125 0 0 1-1.125-1.125V6.75z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 9.75l3.75 2.25-3.75 2.25v-4.5z" />
      </svg>
    </a>
  )}

  <a href="/contacto" class="mx-2">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25H4.5a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5H4.5a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a1.5 1.5 0 0 1-.553 1.161l-7.5 6a1.5 1.5 0 0 1-1.894 0l-7.5-6A1.5 1.5 0 0 1 3 6.993V6.75" />
    </svg>
